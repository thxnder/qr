<mvc:View 
    height="100%" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    controllerName="pe.com.seidor.sap.decor.ventas.controller.Reclamos.RecModificar" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:t="sap.ui.table" 
    xmlns:s="sap.m.semantic" 
    xmlns:tnt="sap.tnt" 
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" displayBlock="true">


    
    <SplitContainer id="SplitAppId" initialMaster="MasterRecNuevo" initialDetail="pag_rec_nuevo_reclamo" orientationChange="onOrientationChange" >
        <masterPages>
            <!--Master Nuevo Reclamo-->

            <core:Fragment fragmentName="pe.com.seidor.sap.decor.ventas.view.Reclamos.Frag.Master.RecMasterNuevoFragment" type="XML"></core:Fragment>

            <!--Master Interlocutor Buscar Cliente-->
            <core:Fragment fragmentName="pe.com.seidor.sap.decor.ventas.view.Reclamos.Frag.Master.RecMasterBusClienteFragment" type="XML"></core:Fragment>
            
        </masterPages>

        <detailPages>

            <!--Detail Nuevo Reclamo-->
            <core:Fragment fragmentName="pe.com.seidor.sap.decor.ventas.view.Reclamos.Frag.Detail.RecDetailNuevoFragment" type="XML"></core:Fragment>

            <!--Detail Interlocutores-->
            <core:Fragment fragmentName="pe.com.seidor.sap.decor.ventas.view.Reclamos.Frag.Detail.RecDetailInterlocutoresFragment" type="XML"></core:Fragment>



            <!--Detail Datos de Reclamo-->
            <core:Fragment fragmentName="pe.com.seidor.sap.decor.ventas.view.Reclamos.Frag.Detail.RecDetailDatosReclamoFragment" type="XML"></core:Fragment>


            <!--Detail Cambiar Status-->
            <core:Fragment fragmentName="pe.com.seidor.sap.decor.ventas.view.Reclamos.Frag.Detail.RecDetailCambiarStatusFragment" type="XML"></core:Fragment>

            <BusyDialog id="loadingControl" />
    <!--Dialog Inicio Rec Nuevo-->
    <Dialog title="Ingresar Reclamo" class="cabecera_dialogo" id="dlg_rec_modificar_inicio" stretchOnPhone="true" contentWidth="20%" contentHeight="12%">
        <content>
            <Page>
                <customHeader>
                    <Toolbar>
                        <Label text="Número de Reclamo:"></Label>
                        <SearchField width="55%" placeholder="Ingrese Nro. de Reclamo" id="txt_pNumeroReclamo" value="{/numReclamo}" showSearchButton="false"></SearchField>
                    </Toolbar>
                </customHeader>
                <content></content>
            </Page>
        </content>
        <beginButton>
            <Button text="Continuar" class="btn_aceptar" type="Accion" icon="sap-icon://accept" press="onContinuarDlg_rec_modificar_inicio" />
        </beginButton>
        <endButton>
            <Button text="Cancel" class="btn_cancelar" type="Reject" icon="sap-icon://sys-cancel" press="goHome" />
        </endButton>
    </Dialog>


<!--dlg_MensajeAvisoGeneralReclamo-->
            <core:Fragment fragmentName="pe.com.seidor.sap.decor.ventas.view.Reclamos.FragDialogs.dlg_MensajeAvisoGeneralReclamo" type="XML"></core:Fragment>
            


    <!--Dialog Segundo Rec Nuevo-->
    <Dialog title="Stock Disponible" class="cabecera_dialogo" id="dlg_rec_nuevo_2" stretchOnPhone="true" contentWidth="20%" contentHeight="75%">
        <content>
            <Panel>
                <content></content>
            </Panel>
        </content>
        <beginButton>
            <Button text="Guardar" class="btn_aceptar" type="Accion" icon="sap-icon://save" press="onMasterProductosBuscar" />
        </beginButton>
        <endButton>
            <Button text="Cancel" class="btn_cancelar" type="Reject" icon="sap-icon://sys-cancel" press="onCloseDlgRecNuevo2" />
        </endButton>
    </Dialog>
    <!--Dialog Interlocutores Buscar Rec Nuevo-->
     <Dialog title="Buscar Cliente" class="cabecera_dialogo" id="dlg_buscar_rec_nuevo" contentWidth="20%" contentHeight="25%">        
                <content>
                    <f:Form editable="true">
                           <!-- <f:title>
                                <core:Title text="Address" />
                            </f:title> -->
                            <f:layout>
                                <f:ResponsiveGridLayout
                                    labelSpanXL="3"
                                    labelSpanL="3"
                                    labelSpanM="3"
                                    labelSpanS="5"
                                    adjustLabelSpan="false"
                                    emptySpanXL="4"
                                    emptySpanL="4"
                                    emptySpanM="4"
                                    emptySpanS="0"
                                    columnsXL="1"
                                    columnsL="1"
                                    columnsM="1"
                                    singleContainerFullSize="false" />
                            </f:layout>
                            <f:formContainers>
                                <f:FormContainer>
                                    <f:formElements>
                                        <f:FormElement label="RUC / DNI">
                                            <f:fields>
                                                <SearchField  id="txt_ruc_cliente_busqueda" showSearchButton="false" placeholder="Ingrese RUC / DNI"/>
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement label="Razón Social">
                                            <f:fields>
                                                <SearchField  id="txt_nombre_cliente_busqueda" showSearchButton="false" placeholder="Ingrese Razón Social"/>
                                            </f:fields>
                                        </f:FormElement>                                        
                                    </f:formElements>
                                </f:FormContainer>
                            </f:formContainers>
                        </f:Form>                   
                </content>            
        <beginButton>
            <Button text="Buscar" class="btn_aceptar" type="Accion" press="onDocReclamoBuscarClienteAccion" icon="sap-icon://search" />
        </beginButton>
        <endButton>
            <Button text="Cancel" class="btn_cancelar" type="Reject" icon="sap-icon://sys-cancel" press="onCloseDlgBuscarRecNuevo"/>
        </endButton>
    </Dialog>
      <!--Dialog Inicio Mostrar Revlamos-->
    <Dialog title="" class="cabecera_dialogo" id="dlg_mostrar_reclamo" stretchOnPhone="true" contentWidth="20%" contentHeight="12%">
        <content>
            <Page>
                <customHeader>
                    <Toolbar>
                        <Label text="Número de Pedido:"></Label>
                        <SearchField width="60%" value="{/Reclamo}"  showSearchButton="false"></SearchField>
                    </Toolbar>
                </customHeader>
                <content></content>
            </Page>
        </content>
        <beginButton>
            <Button text="Continuar" class="btn_aceptar" type="Accion" icon="sap-icon://accept" press="onCrearDlgRecNuevo" />
        </beginButton>
    </Dialog>
     <Dialog title="Seleccionar Cliente" class="cabecera_dialogo" id="dlg_DocNuevobuscarCliente_resultado" contentWidth="auto" contentHeight="auto">
                <content>
                    <List id="listaClientesReclamoModificar" selectionChange="SeleccionaCliente" mode="SingleSelectMaster" growing="true" growingThreshold="30" growingDirection="Upwards" busyIndicatorDelay="200"
                        enableBusyIndicator="false" growingTriggerText="Previous Products" noDataText="No hay clientes" itemPress=""  items="{
                                        path : '/BusquedaClientes',
                                        sorter : {
                                            path : 'Descripcion',
                                            group: false
                                        }
                                    }">
                                    <CustomListItem height="auto">
                <FlexBox
                        alignItems="Start"
                        justifyContent="SpaceBetween" >
                        <items>
                                <FlexBox
                        alignItems="Start" width="100%">
                        <items>

                        <VBox justifyContent="Center" width="20px">
                                </VBox>
                                <FlexBox
                                    height="45px"
                        alignItems="Start"
                        justifyContent="Start">
                        <items>

                                <Button width="100%" height="auto"  type="Transparent" icon="sap-icon://customer" press="" >
                                    <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                                </Button>

                            </items>
                        </FlexBox>
                        <VBox justifyContent="Center" width="35px">
                                </VBox>
                        <FlexBox
                                    height="43px"
                        alignItems="End"
                        justifyContent="End">
                        <items>

                                <Text width="100%" class="lblDetalleProducto" text="{codigo} \n {nombrecliente}">
                                    <layoutData>
                                <FlexItemData growFactor="3" />
                            </layoutData>
                                </Text>

                            </items>
                        </FlexBox>
                        
                              </items>
                            </FlexBox>
                    </items>
                </FlexBox>
                </CustomListItem>
                        
                    </List>
                </content>
        <endButton>
            <Button text="Cancel" class="btn_cancelar" type="Reject" icon="sap-icon://sys-cancel" press="onCerrarListado"/>
        </endButton>

    </Dialog>
    

    <Dialog title="Aviso" id="dlg_MensajeAvisoGeneralRec" stretchOnPhone="true" contentWidth="1%" contentHeight="9%">
        <content>
            <FlexBox
                    alignItems="Center"
                    justifyContent="Center">
            <Text id="txt_aviso_generalRec" text="Los datos del solicitante se copiaron"></Text>
        </FlexBox>
        </content>
        <beginButton>
            <Button text="OK" type="Accept" press="onOkDlg_MensajeAvisoGeneral"></Button>
        </beginButton>
    </Dialog>

            
        </detailPages>
    </SplitContainer>


</mvc:View>